<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.loadti.catalogomobile">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <!-- Permissao para usar a internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Permissao para ver o status da internet -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Permissao para acessar a internet wifi -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- Permissao para escrita em dispositivos externos -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- Permissao para leitura em dispositivos externos -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- Permissao para desabilitar o botao power -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyTheme">
        <!--Activity Login -->
        <activity
            android:name=".views.Login"
            android:label="@string/app_name"
            android:screenOrientation="landscape">"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.Principal"
            android:label="Catalogo Mobile"
            android:screenOrientation="portrait"></activity>


        <activity
            android:name=".views.ContainerUsuario"
            android:label="Manutenção no Cadastro de Usuário"
            android:screenOrientation="landscape" />

        <activity
            android:name=".views.ContainerConfiguracao"
            android:label="Configurações"
            android:screenOrientation="landscape" />

        <activity
            android:name=".views.CadastrarCampanha"
            android:label="Manutenção de Campanha"
            android:screenOrientation="landscape" />

        <activity
            android:name=".views.ContainerCadastrarCampanha"
            android:label="Manutenção de Campanha"
            android:screenOrientation="landscape" />

        <activity
            android:name=".views.PesquisaCampanha"
            android:label="Pesquisa Campanha"
            android:screenOrientation="landscape" />


        <activity
            android:name=".views.PesquisaUsuario"
            android:label="Pesquisa Usuário"
            android:screenOrientation="landscape" />


        <uses-library android:name="android.test.runner" />

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="300195e33df88ec0023c246e84c679a76573a374" />


    </application>


</manifest>
